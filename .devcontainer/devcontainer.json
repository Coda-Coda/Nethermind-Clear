{
  // See https://github.com/xtruder/nix-devcontainer. Used under the MIT licence, https://github.com/xtruder/nix-devcontainer/blob/main/LICENSE.
  "name": "nethermind-clear-in-codespaces",
  "dockerFile": "Dockerfile",
  "context": "${localWorkspaceFolder}",
  "build": {
    "args": {
      "USER_UID": "${localEnv:USER_UID}",
      "USER_GID": "${localEnv:USER_GID}"
    }
  },

  "runArgs": [
    "--security-opt", "label=disable"
  ],

  "containerEnv": {
  },

  "onCreateCommand": "nix develop --command bash -c \"lake build; cd vc; stack build --nix; echo 'Done getting dependencies and initial setup and using lake and stack!'\"",

  "overrideCommand": false,
  "userEnvProbe": "loginShell",
  "updateRemoteUserUID": false,
  "forwardPorts": [],

  "customizations": {
   "vscode": {
      "extensions": [
        "leanprover.lean4"
      ]
    },
    "codespaces": {
    }
  }
}